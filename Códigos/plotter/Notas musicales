#include <stdio.h>
#include <iostream>
#include <string>
#include <malloc.h>

using namespace std;
string convertir_notas(char notas);
#define OUTLEN 7

int main()
{
	char* notas;
	int numerodelusuario;

	printf("Sea la longitud de la canc√≠on:");
	scanf_s("%d",&numerodelusuario);
	notas = (char*) malloc((sizeof(char)*numerodelusuario)+1);
	if (notas != NULL)
	{
		printf("Introduce las notas:");
		
        getchar();
		gets_s(notas, numerodelusuario+1); 

		for (int i = 0; i < numerodelusuario; i++)
		{
			string out = convertir_notas(*(notas + i));
			cout << out;
			cout << "\n";
		}
	}


}

string convertir_notas(char notas)
{
	string out0 = "0000000";
	string out1 = "1000000";
	string out2 = "0100000";
	string out3 = "0010000";
	string out4 = "0001000";
	string out5 = "0000100";
	string out6 = "0000010";
	string out7 = "0000001";
	switch (notas)
	{
	case 'D':
        
		return out1;
		break;
	case 'R':
        
        return out2;
		break;
	case 'M':
        
		return out3;
		break;
	case 'F':
		return out4;
		break;
	case 'S':
		return out5;
		break;
	case 'L':
		return out6;
		break;
	case 'I':
		return out7;
		break;
	default:
		return out0;
		break;


	}
}
