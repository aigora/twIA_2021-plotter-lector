#include <stdio.h>
#include <malloc.h>
#include <string>
#include <iostream>

#define OUTLEN 7
using namespace std;
string convertir_notas(char notas);
char convertir_notas(string notasposicion);

int main()
{
	printf("Si quiere pasar de notas a numeros, pulse A.");
	printf("\n\nSi quiere pasar de numeros a notas,pulse B.\n");
	char a;
	scanf_s("%c", &a);
	switch (a)
	{
	case 'A': char* notas;
		int numerodelusuario;

		printf("Sea la longitud de la canc√≠on:");
		scanf_s("%d", &numerodelusuario);
		notas = (char*)malloc((sizeof(char) * numerodelusuario) + 1);
		if (notas != NULL)
		{
			printf("Introduce las notas:");

			getchar();
			gets_s(notas, numerodelusuario + 1);

			for (int i = 0; i < numerodelusuario; i++)
			{
				string out = convertir_notas(*(notas + i));
				cout << out;
				cout << "\n";
			}
		}
		break;
	case 'B': string notasposicion;
		int numerodelusuario2;
		printf("Sea la longitud de la cancion: ");
		notasposicion.size();
		scanf_s("%d", &numerodelusuario2);

		for (int i = 0; i < numerodelusuario2; i++)
		{
			printf("\nLas notas son:");
			cin >> notasposicion;
			cout << "" << convertir_notas(notasposicion) << endl;
		}

	}
}

string convertir_notas(char notas)
{
	string out0 = "0000000";
	string out1 = "1000000";
	string out2 = "0100000";
	string out3 = "0010000";
	string out4 = "0001000";
	string out5 = "0000100";
	string out6 = "0000010";
	string out7 = "0000001";
	switch (notas)
	{
	case 'D':

		return out1;
		break;
	case 'R':

		return out2;
		break;
	case 'M':

		return out3;
		break;
	case 'F':
		return out4;
		break;
	case 'S':
		return out5;
		break;
	case 'L':
		return out6;
		break;
	case 'I':
		return out7;
		break;
	default:
		return out0;
		break;


	}
}

char convertir_notas(string notasposicion)
{
	char nota;

	if (notasposicion == "1000000")
	{
		nota = 'D';

	}
	else if (notasposicion == "0100000")

	{
		nota = 'R';

	}
	else if (notasposicion == "00100000")
	{
		nota = 'M';

	}
	else if (notasposicion == "0001000")
	{
		nota = 'F';

	}
	else if (notasposicion == "0000100")
	{
		nota = 'S';

	}
	else if (notasposicion == "0000010")
	{
		nota = 'L';

	}
	else if (notasposicion == "0000001")
	{
		nota = 'I';

	}
	return nota;

}
